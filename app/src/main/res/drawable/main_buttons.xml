<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/eventBtn_pressed"/>
            <stroke
                android:width="1dp"
                android:color="@color/eventBtn_pressed"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/eventsBtn"/>
            <stroke
                android:width="1dp"
                android:color="@color/eventsBtn"
                android:alpha="0.5"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>